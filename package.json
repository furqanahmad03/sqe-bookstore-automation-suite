{
  "name": "book-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:smoke": "playwright test --grep @smoke",
    "test:functional": "playwright test --grep @functional",
    "test:regression": "playwright test --grep @regression",
    "test:auth": "playwright test tests/auth.spec.ts",
    "test:books": "playwright test tests/books.spec.ts",
    "test:cart": "playwright test tests/cart.spec.ts",
    "test:checkout": "playwright test tests/checkout.spec.ts",
    "test:admin": "playwright test tests/admin.spec.ts",
    "test:performance": "ts-node tests/performance/performance-tests.ts",
    "test:security": "ts-node tests/security/security-tests.ts",
    "test:all": "npm run test && npm run test:performance && npm run test:security",
    "report": "playwright show-report",
    "report:open": "open playwright-report/index.html",
    "codegen": "playwright codegen http://localhost:3000"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "js-cookie": "^3.0.1",
    "lighthouse": "^11.4.0",
    "mongoose": "^6.6.7",
    "next": "^16.0.10",
    "next-auth": "^4.24.13",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "sass": "^1.55.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
